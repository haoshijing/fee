<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yingliguoji.fee.dao.MemberClassifyMapper">

    <sql id="tableName">
        member_records_total
    </sql>

    <insert id="insert">
        insert into
        <include refid="tableName"/>
        (
        memberId,
        classifyId,
        money,
        feeTime,
        createTime
        )
        VALUES (
        #{memberId},
        #{classifyId},
        #{money},
        #{feeTime},
        #{createTime}
        )
    </insert>

    <select id="queryCount" parameterType="com.yingliguoji.fee.po.MemberClassifyPo" resultType="java.lang.Integer">
        select count(1) from
        <include refid="tableName"/>
        where memberId = #{memberId}
        and classifyId = #{classifyId}
        <if test="feeTime != null">
            AND feeTime = #{feeTime}
        </if>
    </select>
    <!-- 插入一条记录 -->


    <select id="update" parameterType="com.yingliguoji.fee.po.MemberClassifyPo"
            resultType="java.lang.Integer">

        update
        <include refid="tableName"/>
        SET
        money = #{money}
        where memberId = #{memberId}
        and classifyId = #{classifyId}
    </select>

    <select id="sumMoney" resultType="java.math.BigDecimal">
        select sum(money) from
        <include refid="tableName"/>
        where memberId = #{memberId}
        and classifyId = #{cid}
    </select>
    <select id="seletcMinFee" resultType="java.lang.Long">
        select max(feeTime) from <include refid="tableName"/>
    </select>
</mapper>