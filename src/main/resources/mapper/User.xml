<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yingliguoji.fee.dao.UserMapper">

    <sql id="tableName">
        users
    </sql>
    <insert id="insert" parameterType="com.yingliguoji.fee.po.UserPo" useGeneratedKeys="true" keyProperty="id">
        Insert into
        <include refid="tableName"/>
        (
        name,
        password,
        email,
        is_super_admin,
        role_id,
        remember_token,
        created_at,
        updated_at,
        invitation,
        telnum,
        qq,
        super,
        wechat,
        proportion
        )
        VALUES
        (
        #{name},
        #{password},
        #{email},
        #{isSuperAdmin},
        #{roleId},
        #{rememberToken},
        #{createdAt},
        #{updatedAt},
        #{invitation},
        #{telnum},
        #{qq},
        #{superVal},
        #{wechat},
        #{proportion}
        )
    </insert>

    <select id="getAllBranch" resultType="com.yingliguoji.fee.po.UserPo">
        select * from <include refid="tableName"/>
        where is_super_admin = 2
    </select>
    <select id = "findByName" resultType="com.yingliguoji.fee.po.UserPo">
        select name from <include refid="tableName"/>
        where name = #{name}
    </select>

    <select id="selectById" resultType="com.yingliguoji.fee.po.UserPo">
        select * from  <include refid="tableName"/>
        where id = #{id}
    </select>

</mapper>